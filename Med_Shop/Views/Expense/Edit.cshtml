@model DrugHouse.Models.Expense

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExpenseID" />
            <input type="hidden" asp-for="DateTime" />
            <input type="hidden" asp-for="User" />

            <div class="form-group mb-1 row">
                @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mb-1 row">
                @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-9 offset-3">
                    <button type="submit" title="Update" class="btn btn-outline-success"><i class="bi bi-pencil "></i> Update</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Expense" title="Back to List" class="card-link float-sm-start"><i class="mt-2 bi-arrow-left"></i> Back to list</a>
</div>