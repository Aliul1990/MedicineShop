@model DrugHouse.Models.Provider

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold">Are you sure you want to delete @Model.ProviderName?</h2>
<div>
    <h4>Provider</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProviderName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProviderName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactInfo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProviderID" />
        <button type="submit" class="btn offset-2 btn-outline-danger" title="Delete" value="Delete"><i class="bi bi-trash"></i> Delete</button>
    </form>
</div>
<div>
    <a asp-action="Index" asp-controller="Provider" title="Back to List" class="card-link float-sm-start"><i class="mt-2 bi-arrow-left"></i> Back to list</a>
</div>