@model DrugHouse.Models.Provider

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold">Edit @Model.ProviderName</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProviderID" />
            <div class="form-group mb-1 row">
                @Html.LabelFor(model => model.ProviderName, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ProviderName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProviderName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mb-1 row">
                @Html.LabelFor(model => model.ContactInfo, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ContactInfo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ContactInfo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-9 offset-3">
                    <button type="submit" title="Update" class="btn btn-outline-success"><i class="bi bi-pencil "></i> Update</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Provider" title="Back to List" class="card-link float-sm-start"><i class="mt-2 bi-arrow-left"></i> Back to list</a>
</div>