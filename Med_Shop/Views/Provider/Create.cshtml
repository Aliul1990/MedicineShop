@model DrugHouse.Models.Provider

<div class="card m-2">
    <div class="card-header">
        <h4>Create New Provider</h4>
        <h6 class="card-subtitle text-muted m-2">Fill up the Form And Save</h6>
    </div>
    <div class="card-body ">
        @using (Html.BeginForm("Create", "Provider", FormMethod.Post))
        {
            <div class="row mb-1">
                @Html.LabelFor(x => x.ProviderName, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.ProviderName, new { @class = "form-control form-control-sm" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.ProviderName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-1">
                @Html.LabelFor(x => x.ContactInfo, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.ContactInfo, new { @class = "form-control form-control-sm" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.ContactInfo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-10 offset-2">
                    <button type="submit" title="Add New" class="btn btn-outline-success"><i class="bi bi-save"></i> Save</button>
                </div>
            </div>

        }
        <a href="@Url.Action("Index","Provider")" title="Back To List" class="card-link float-sm-start"><i class="bi bi-arrow-left"></i> Back to list</a>
    </div>
    <div class="card-footer"></div>
</div>