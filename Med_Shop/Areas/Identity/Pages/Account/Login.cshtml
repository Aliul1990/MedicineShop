@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row mb-1">
                    <label class="col-form-label col-form-label col-2 r" asp-for="Input.Email"></label>
                    <div class="col-6">
                        <input asp-for="Input.Email" class="form-control r" />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-1">
                    <label class="col-form-label col-form-label col-2 r" asp-for="Input.Password"></label>
                    <div class="col-6">
                        <input asp-for="Input.Password" class="form-control r" />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-1 offset-2">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="row mb-1">
                    <div class="col-10 offset-2">
                        <button type="submit" class="btn btn-outline-primary">LogIn</button>
                        <a id="login" asp-area="Identity" asp-page="/Account/Register">Don`t have an Account? Sign Up!!!</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}